{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}
{% if breadcrumb %}

  {% for item in breadcrumb %}
    {% if item == breadcrumb|last %}
      {% set classes = 'active' %}
    {% endif %}
    <li{% if classes %} class="{{ classes }}"{% endif %}>
      {% if item.url %}
        <a href="{{ item.url }}">{{ item.text }}</a>
      {% else %}
        {{ item.text }}
      {% endif %}
    </li>
  {% endfor %}

{% endif %}