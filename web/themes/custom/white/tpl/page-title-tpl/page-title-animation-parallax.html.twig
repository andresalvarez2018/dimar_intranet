
{% if field_pt_image_backgroun %}
    {% set bg_imgs = field_pt_image_backgroun %}
{% else %}
    {% set bg_imgs = background_page_title_image %}
{% endif %}
{# animation_layer #}
{% if node.field_pt_animation_layer.value %}
    {% set animation_layer = node.field_pt_animation_layer.value %}
{% else %}
    {% set animation_layer = theme_page_title_animation_layer %}
{% endif %}
{# subtitle #}
{% if node.field_subtitle.value %}
    {% set subtitle = node.field_subtitle.value %}
{% elseif current_page == 'blog' %}
    {% set subtitle = blog_page_subtitle %}
    {% set bg_imgs = blog_background_page_title_image %}
    {% set animation_layer = blog_page_title_animation_layer %}
{% else %}
    {% set subtitle = page_subtitle %}
{% endif %}

<div class="header-animation white" data-parallax="scroll" data-position="top" data-natural-height="650" data-natural-width="1920" data-image-src="{{ bg_imgs ? bg_imgs|first }}">
    {% if animation_layer == 'cloud' %}
        <div id="anima-layer-a" class="anima-layer clouds-1"></div>
        <div id="anima-layer-b" class="anima-layer clouds-2"></div>
    {% elseif animation_layer == 'fog' %}
        <div id="anima-layer-a" class="anima-layer fog-1"></div>
        <div id="anima-layer-b" class="anima-layer fog-2"></div>        
    {% endif %}
    <div class="container">
        <div class="title-base">
            <hr class="anima" />
            <h1>{{ current_title }}</h1>
   {% if "Lorem ipsum dolor sit ame" not in subtitle %}
                <p>{{ subtitle ? subtitle }}</p> 
            {% endif %}        </div>
    </div>
</div>