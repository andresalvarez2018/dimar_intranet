

{# subtitle #}
{% if node.field_subtitle.value %}
    {% set subtitle = node.field_subtitle.value %}
{% elseif current_page == 'blog' %}
    {% set subtitle = blog_page_subtitle %}
{% else %}
    {% set subtitle = page_subtitle %}
{% endif %}

<div class="header-title white" data-parallax="scroll" data-position="top" data-natural-height="650" data-natural-width="1920" data-image-src="./sites/default/files/default_images/bg-8_2.jpg">
    <div class="container">
        <div class="title-base">
            <hr class="anima" />
            <h1>{{ current_title }}</h1>
            {% if "Lorem ipsum dolor sit ame" not in subtitle %}
                <p>{{ subtitle ? subtitle }}</p> 
            {% endif %}
        </div>
    </div>
</div>

