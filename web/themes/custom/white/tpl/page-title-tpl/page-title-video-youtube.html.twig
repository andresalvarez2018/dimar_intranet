{% if field_pt_image_backgroun %}
    {% set bg_imgs = field_pt_image_backgroun %}
{% else %}
    {% set bg_imgs = background_page_title_image %}
{% endif %}

{% if node.field_pt_video_id_youtube.value %}
    {% set youtube_video = node.field_pt_video_id_youtube.value %}
{% else %}
    {% set youtube_video = theme_page_title_video_id %}
{% endif %}

{# subtitle #}
{% if node.field_subtitle.value %}
    {% set subtitle = node.field_subtitle.value %}
{% elseif current_page == 'blog' %}
    {% set subtitle = blog_page_subtitle %}
    {% set bg_imgs = blog_background_page_title_image %}
    {% set youtube_video = blog_page_title_video_id %}
{% else %}
    {% set subtitle = page_subtitle %}
{% endif %}


<div class="header-video">
    <div class="videobox">
        <div data-video-youtube="{{ youtube_video ? youtube_video }}"></div>
        <div class="mobile-poster" style="background-image:url({{ bg_imgs ? bg_imgs|first }})"></div>
    </div>
    <div class="overlaybox">
        <div class="container">
            <div class="title-base">
                <hr class="anima" />
                <h1>{{ current_title }}</h1>
   {% if "Lorem ipsum dolor sit ame" not in subtitle %}
                <p>{{ subtitle ? subtitle }}</p> 
            {% endif %}            </div>
        </div>
    </div>
</div>