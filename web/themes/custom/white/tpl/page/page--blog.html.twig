
{% set menu_style = theme_menu_style %}

{% set page_title_style = blog_page_title_style %}

{% set current_page = 'blog' %}

{% include theme_path_no_base ~ '/tpl/header/header.html.twig' %}


{% include theme_path_no_base ~ '/tpl/menu-tpl/whites-menu--' ~ menu_style ~ '.html.twig' %}



{% if page_title_style and  page_title_style != 'none' %}
    {% include theme_path_no_base ~ '/tpl/page-title-tpl/page-title-' ~ page_title_style ~ '.html.twig' %}
{% endif %}

<div class="whites-section-content section-empty section-item">
    <div class="container content">
        {{ page.highlighted }}
    </div>
</div>

{# content #}
{% if blog_listing_style == 'grid' %}
    <div class="section-bg-color">
        <div class="container content">
            <div class="row">
                <div class="col-md-9 col-sm-12">
                    <div class="grid-list whites-grid-list grid-layout grid-15">
                    <div class="bread">     {{ page.breadcrumb }} </div>
                        {{ page.content }}
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 widget">
                   {{ page.sidebar }}
                </div>
            </div>
        </div>
    </div>
{% elseif blog_listing_style == 'minimal' %}
    <div class="section-bg-color">
        <div class="container content">
            <div class="row">
                <div class="col-md-8 col-sm-12 col-center">
                    <div class="grid-list whites-grid-list one-row-list">
                    <div class="bread">     {{ page.breadcrumb }} </div>
                        {{ page.content }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="section-empty section-item">
        <div class="container content">
            <div class="row">
                <div class="col-md-9 col-sm-12">
                    <div class="grid-list whites-grid-list one-row-list">
                    <div class="bread">     {{ page.breadcrumb }} </div>
                        {{ page.content }}
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 widget">
                   {{ page.sidebar }}
                </div>
            </div>
        </div>
    </div>
{% endif %}
{# content #}
{% include theme_path_no_base ~ '/tpl/footer/footer.html.twig' %}

<div class="chat"> {{ page.chat }} </div>